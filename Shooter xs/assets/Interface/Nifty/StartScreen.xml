<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="start" controller="mygame.Main">
        <layer id="layer" backgroundColor="#003f" childLayout="center">
            <panel id="panel" height="25%" width="45%" align="center" valign="center" backgroundColor="#f60f" childLayout="center" visibleToMouse="true">                
                <effect>
                    <onStartScreen name="move" mode="in" direction="top" length="600" startDelay="0" inherit="true"/>
                    <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
                    <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
                </effect>
                <text id="text" font="Interface/Fonts/Aharoni.fnt" color="#000f" text="Press the spacebar to start!" align="center" valign="center" />
            </panel>
            <panel  id="panelLogo" height="106px" width="150px" align="right" valign="bottom" backgroundColor="#f60f" childLayout="center" visibleToMouse="true">
                <effect>
                    <onStartScreen name="move" mode="in" direction="left" length="600" startDelay="0" inherit="true"/>
                    <onEndScreen name="move" mode="out" direction="right" length="300" startDelay="0" inherit="true"/>
                    <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
                </effect>     
                <image filename="Interface/Images/nhl_logo.png" valign="center" align="center" height="100%" width="100%" ></image>      
            </panel>
        </layer>
    </screen>
</nifty>
